<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.KrediHesaplama"
             Title="Kredi Hesaplama"  
             Shell.TitleColor="#00CCCC"
            
             >
    <VerticalStackLayout Padding="20" Spacing="10">
       
        <Picker x:Name="krediTipiPicker"
                Title="Kredi Türü Seçin"
                VerticalOptions="Center">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>İhtiyaç Kredisi</x:String>
                    <x:String>Konut Kredisi</x:String>
                    <x:String>Taşıt Kredisi</x:String>
                    <x:String>Ticari Kredisi</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Grid RowSpacing="10" 
                  ColumnSpacing="10" 
                  Margin="0,10,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>

            <Label Text="Kredi Tutarı (TL) :" 
                       Grid.Row="0" Grid.Column="0" 
                       VerticalOptions="Center" />
            
            <Entry x:Name="tutarEntry" 
                       Grid.Row="0" Grid.Column="1"
                       Keyboard="Numeric" />
            
            <Label Text="Faiz Oranı (%)    :" 
                       Grid.Row="1" Grid.Column="0" 
                       VerticalOptions="Center" />
            <Entry x:Name="faizEntry" 
                       Grid.Row="1" Grid.Column="1"
                       Keyboard="Numeric" />

            <Label Text="Vade (Ay)           :"
                       Grid.Row="2" Grid.Column="0"
                       VerticalOptions="Center" />

            <Entry x:Name="VadeEntry" 
                       Grid.Row="2" Grid.Column="1"
                       Keyboard="Numeric" />

            <Slider x:Name="vadeSlider"
             
            Grid.Row="4" Grid.Column="1" Minimum="1"
            Maximum="120"
            Value="1"
            ValueChanged="vadeSlider_ValueChanged"
            VerticalOptions="Center"
            MinimumTrackColor="#00CCCC"   
            ThumbColor="#00CCCC"/>
            
        </Grid>

        <Button x:Name="hesaplaButton"
                    BackgroundColor="#00CCCC"
                    Text="Hesapla"
                    FontSize="18"
                    Margin="0,20,0,0"
                    Clicked="hesaplaButton_Clicked" />

            <Grid RowSpacing="5" 
                  ColumnSpacing="20" 
                  Margin="0,20,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Text="Aylık Taksit         :" Grid.Row="0" Grid.Column="0" FontSize="16" />
            <Label x:Name="aylikTaksitLabel" Grid.Row="0" Grid.Column="1" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="End" />

            <Label Text="Toplam Ödeme  :" Grid.Row="1" Grid.Column="0" FontSize="16" />
            <Label x:Name="toplamOdemeLabel" Grid.Row="1" Grid.Column="1" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="End" />

            <Label Text="Toplam Faiz        :" Grid.Row="2" Grid.Column="0" FontSize="16" />
            <Label x:Name="toplamFaizLabel" Grid.Row="2" Grid.Column="1" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="End" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>